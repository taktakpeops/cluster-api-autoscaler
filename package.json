{
  "name": "cluster-api-autoscaler",
  "version": "0.1.0-beta",
  "description": "An auto-scaler for the NodeJS Cluster API.",
  "main": "./src/master.js",
  "scripts": {
    "test": "mocha",
    "lint": "xo"
  },
  "bin": "./bin/as",
  "files": [
    "./src",
    "./bin"
  ],
  "xo": {
    "ecmaVersion": 6,
    "envs": [
      "node"
    ],
    "globals": [
      "it",
      "describe",
      "beforeEach",
      "afterEach"
    ],
    "rules": {
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "capitalized-comments": [
        "error",
        "never"
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ]
    },
    "semicolon": true,
    "ignores": [
      "./node_modules"
    ],
    "space": true
  },
  "engines": {
    "node": ">=8.11.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jackTheRipper/cluster-api-autoscaler.git"
  },
  "keywords": [
    "autoscaler",
    "cluster-api"
  ],
  "author": "jbaudin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jackTheRipper/cluster-api-autoscaler/issues"
  },
  "homepage": "https://github.com/jackTheRipper/cluster-api-autoscaler#readme",
  "devDependencies": {
    "@types/sinon": "^5.0.2",
    "express": "^4.16.4",
    "mocha": "^5.2.0",
    "sinon": "^6.3.4",
    "xo": "^0.23.0"
  },
  "dependencies": {
    "commander": "^2.18.0"
  }
}
